---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import img1 from "../images/img1.jpg";
import img2 from "../images/img2.jpg";
import img3 from "../images/img3.jpg";
import img4 from "../images/img4.jpg";
import img5 from "../images/img5.jpg";
import img6 from "../images/img6.jpg";
---

<Layout>
  <link rel="stylesheet" href="/src/styles/global.css" />

  <section class="text-center py-10 px-4">
    <h2 class="text-4xl font-bold mb-4">
      Turn Your Ideas Into Beautiful Custom Engravings
    </h2>
    <p class="text-lg text-gray-600 mb-6">
      Custom designs, gifts, signage, and more.
    </p>
    <a
      href="/contact"
      class="inline-block border border-white bg-black text-white px-6 py-2 rounded hover:border-4 hover:shadow-[0_0_10px_3px_rgba(255,255,255,0.7)] hover:animate-pulse transition"
      >Request a Quote</a
    >
  </section>

  <!-- Carousel wrapper with horizontal scroll -->
  <!-- <div
    class="relative w-full max-w-5xl mx-auto overflow-x-auto scrollbar-hide"
    id="carousel-container"
  > -->
  <div id="carousel-container" class="flex space-x-6 px-4">
    <img class="carousel-item" src={img1.src} />
    <img class="carousel-item" src={img2.src} />
    <img class="carousel-item" src={img3.src} />
    <img class="carousel-item" src={img4.src} />
    <img class="carousel-item" src={img5.src} />
    <img class="carousel-item" src={img6.src} />
    <img class="carousel-item" src={img1.src} />
    <img class="carousel-item" src={img2.src} />
    <img class="carousel-item" src={img3.src} />
    <img class="carousel-item" src={img4.src} />
    <img class="carousel-item" src={img5.src} />
    <img class="carousel-item" src={img6.src} />
  </div>

  <section class="py-10 max-w-5xl mx-auto text-center md:text-left px-4">
    <h2 class="text-3xl font-semibold mb-4">Why Choose Us?</h2>
    <ul class="list-disc list-inside space-y-2">
      <li>High-quality materials and craftsmanship</li>
      <li>Fast turnaround times</li>
      <li>Personalized service tailored to your needs</li>
      <li>Competitive pricing without compromising quality</li>
    </ul>
  </section>

  <section class="py-10 max-w-5xl mx-auto text-center md:text-left px-4">
    <h2 class="text-3xl font-semibold mb-4">Our Services</h2>
    <ul class="list-disc list-inside space-y-2">
      <li>Custom engraving on various materials</li>
      <li>Personalized gifts for any occasion</li>
      <li>Signage and branding solutions</li>
      <li>Prototyping and product development</li>
    </ul>
  </section>

  <section class="py-10 max-w-5xl mx-auto text-center md:text-left px-4">
    <h2 class="text-3xl font-semibold mb-4">Get Started Today!</h2>
    <p class="text-lg text-gray-600 mb-6">
      Ready to bring your ideas to life? Contact us for a free quote and
      consultation.
    </p>
    <a
      href="/contact"
      class="inline-block border border-white bg-black text-white px-6 py-2 rounded hover:border-4 hover:shadow-[0_0_10px_3px_rgba(255,255,255,0.7)] hover:animate-pulse transition"
      >Request a Quote</a
    >
  </section>

  <script src="/src/scripts/carouselscript.js"></script>
</Layout>
