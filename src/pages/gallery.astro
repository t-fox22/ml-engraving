---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <link rel="stylesheet" href="/src/styles/global.css" />
  <section class="py-10">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6 text-center">Gallery</h2>
      <hr class="border-gray-600 opacity-50 mb-10 w-4/5 md:w-2/3 mx-auto" />
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
        <div class="overflow-hidden rounded-lg shadow-sm">
          <img
            src="https://picsum.photos/seed/1/300/200"
            alt="Gallery image 1"
            class="w-full h-auto object-cover"
          />
        </div>
        <div class="overflow-hidden rounded-lg shadow-sm">
          <img
            src="https://picsum.photos/seed/2/300/200"
            alt="Gallery image 2"
            class="w-full h-auto object-cover"
          />
        </div>
        <div class="overflow-hidden rounded-lg shadow-sm">
          <img
            src="https://picsum.photos/seed/3/300/200"
            alt="Gallery image 3"
